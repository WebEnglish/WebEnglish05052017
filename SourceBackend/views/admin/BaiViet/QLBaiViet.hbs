<div class="mt-3">
    <div class="title ml-5 text-black">
        <h2><b>Quản lý Bài viết</b></h2>
    </div>
    <div class="col-md-12 ml-5 mt-3 d-flex flex-nowrap">
        <div class="col-md-9 d-flex flex-nowrap">
            Lọc theo loại: &nbsp;
            <select class="form-control border col-md-3">
            </select> &nbsp;
            {{!-- <a href="#" data-toggle="modal" data-target="#ThemCat-Modal"><i class="fas fa-plus-circle"></i>
                Thêm loại</a> --}}
        </div>
        <div class="col-md-4 d-flex justify-content-start">
            <button id="btnThem" class="btn" data-toggle="modal" data-target="#Them-Modal">
                <i class="fas fa-plus-circle"></i> Thêm bài</button>
        </div>
    </div>
    <div class="col-md-12 mt-3">
        <table class="table table-hover table-dark word-table datatable" id="myTable">
            <thead>
                <tr>
                    <td>STT</td>
                    <td>Tên bài viết </td>
                    <td>Tác giả</td>
                    <td>Ngày đăng</td>
                    <td>Hành động</td>
                </tr>
            </thead>
            <tbody>
                {{#each List}}
                <tr>
                    <td scope="row">{{a}}</td>
                    <td>{{TieuDe}}</td>
                    <td>{{hoten}}</td>
                    <td>{{format NgayDang}}</td>
                    <td>
                        <a href="" data-toggle="modal" data-target="#delModal"><i class="fas fa-minus-circle"></i></a>
                        <a href="/admin/baiviet/edit/{{idTips}}"><i class="far fa-eye"></i></a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>