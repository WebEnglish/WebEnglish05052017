{{#section 'css'}}
<link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}
{{#section 'js'}}
<script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>

<script>
    $(function () {
        $('#date').datetimepicker({
            format: 'd/m/Y',
            timepicker: false,
            mask: true,
        });
    })
</script>

<script>
     $(function () {
         $('#chitiet').click(function(){
             $('#ten').val($('#'));
         })
     })
</script>
{{/section}}

<div class="mt-3">
    <div class="title ml-5 text-black">
        <h2><b>Quản lý Phần ngữ pháp</b></h2>
    </div>
    <div class="col-md-12 ml-5 mt-3 d-flex flex-nowrap">
        <div class="col-md-9 d-flex flex-nowrap">
            Lọc theo loại: &nbsp;
            <select class="form-control border col-md-3">
                <option>Cơ bản</option>
                <option>Nâng cao</option>

            </select> &nbsp;
            <a href="#" data-toggle="modal" data-target="#ThemCat-Modal"><i class="fas fa-plus-circle"></i>
                Thêm
                loại</a>
        </div>
        <div class="col-md-4 d-flex justify-content-start">
            <button id="btnThem" class="btn" data-toggle="modal" data-target="#Them-Modal">
                <i class="fas fa-plus-circle"></i> Thêm bài học</button>
        </div>
    </div>
    <div class="col-md-12 mt-3">
        <table class="table table-hover table-dark word-table datatable" id="myTable">
            <thead>
                <tr>
                    <td>STT</td>
                    <td>Chủ đề</td>
                    <td>Ngày đăng</td>
                    <td>Hành động</td>
                </tr>
            </thead>
            <tbody>
                {{#each this.dsCauTruc}}
                <tr>
                    <td>{{stt}}</td>
                    <td>{{ChuDe}}</td>
                    <td>{{format NgayDang}}</td>
                    <td>
                        <a href="" data-toggle="modal" data-target="#chitiet-Modal"><i
                                class="fas fa-minus-circle"></i></a>
                        <a href=""><i class="fas fa-wrench"></i></a>
                        <a href="/admin/nguphap/chitiet/{{idCauTruc}}" id="chitiet"><i class="far fa-eye"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>



<div class="d-flex justify-content-center">
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>
</div>